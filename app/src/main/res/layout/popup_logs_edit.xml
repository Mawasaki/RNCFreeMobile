<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/lyt_logs_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_logs_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_logs_edit_popup_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt_logs_edit"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_connection_detail_list"
                android:layout_width="match_parent"
                android:textColor="#111111"
                android:layout_height="wrap_content"
                android:text="Text Location" />

            <EditText
                android:id="@+id/inp_detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text RNC"
                android:textColor="#111111"
                android:textSize="16dp"
                android:backgroundTint="@color/ColorPrimary" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/lyt_logs_edit_popup_coo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_logs_edit_popup_txt"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_detail_coo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="GPS coordinates" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/lyt_logs_edit_popup_coo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_logs_edit_popup_coo_txt"
        android:layout_marginBottom="5dp"
        android:weightSum="2"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/inp_detail_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAT"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="#111111"
            android:layout_below="@id/txt_detail_text"
            android:backgroundTint="@color/ColorPrimary"
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/inp_detail_lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LON"
            android:textSize="16dp"
            android:textColor="#111111"
            android:layout_below="@id/txt_detail_text"
            android:backgroundTint="@color/ColorPrimary" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>