<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fm_logs_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/layout_bg"
        android:elevation="1dp" >

    <RelativeLayout
        android:id="@+id/layout_logs_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_logs_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_logs_main_infos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cells infos"
                android:layout_weight="1.5"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_logs_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cells infos"
                android:layout_weight="1.5"
                android:layout_marginRight="3dp"
                android:textColor="#888888"
                android:textSize="9dp"
                android:gravity="right" />

            <TextView
                android:id="@+id/txt_logs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_weight="0"
                android:textColor="@android:color/black"
                android:gravity="end" />

            <ImageButton
                android:id="@+id/logs_btn_menu"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_more_vert"
                android:layout_toRightOf="@+id/txt_logs_text"
                android:background="@null" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logs_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_logs_1">

            <TextView
                android:id="@+id/txt_logs_text"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_height="wrap_content"
                android:text="sdfsfsdf sef zegfsdf sqdf df "
                android:textStyle="normal"
                android:textColor="@color/ColorPrimaryDark" />


        </LinearLayout>

    </RelativeLayout>
    </FrameLayout>

</LinearLayout>