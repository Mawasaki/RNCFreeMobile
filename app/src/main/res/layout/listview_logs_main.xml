<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_logs_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/layout_logs_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_logs_main_infos"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_height="wrap_content"
                android:text="113"
                android:textStyle="normal"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_logs_date"
                android:layout_width="0dp"
                android:layout_weight="1.00"
                android:layout_height="wrap_content"
                android:text="-90"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:gravity="end" />

            <ImageButton
                android:id="@+id/logs_btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert"
                android:layout_toRightOf="@+id/txt_logs_text"
                android:background="@null" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logs_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_logs_1">

            <TextView
                android:id="@+id/txt_logs_text"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_height="wrap_content"
                android:text="sdfsfsdf sef zegfsdf sqdf df "
                android:textStyle="normal"
                android:textColor="@color/ColorPrimaryDark" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>