<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fm_export_history_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/layout_bg"
        android:elevation="1dp" >

        <RelativeLayout
            android:id="@+id/layout_export_history_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_export_history_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_export_history_infos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#id Name by nick"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_export_history_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_weight="0"
                    android:textColor="@android:color/black"
                    android:gravity="end" />

                <ImageButton
                    android:id="@+id/logs_btn_logs_history_menu"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_more_vert"
                    android:background="@null" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_export_history_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout_export_history_1">

                <TextView
                    android:id="@+id/txt_export_history_text_nb_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Total Exported :"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_export_history_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type export: NetMonster"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_export_history_text_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: Samsung Galaxy Note 4"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_export_history_text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version app: 0.0.1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>