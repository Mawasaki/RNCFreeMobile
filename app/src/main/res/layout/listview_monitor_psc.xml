<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/layout_psc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_psc_psc"
            android:layout_width="0dp"
            android:layout_weight="0.90"
            android:layout_height="wrap_content"
            android:text="113"
            android:textStyle="normal"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_psc_rssi"
            android:layout_width="0dp"
            android:layout_weight="1.00"
            android:layout_height="wrap_content"
            android:text="-90"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:gravity="end" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_psc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_psc">

            <TextView
                android:id="@+id/txt_psc_text"
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:layout_height="wrap_content"
                android:text="sdfsfsdf sef zegfsdf sqdf df "
                android:textStyle="normal"
                android:textColor="@color/ColorPrimaryDark" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>