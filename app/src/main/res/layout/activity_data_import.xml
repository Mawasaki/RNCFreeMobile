<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:layout_margin="6dp"
        android:clickable="true"
        android:elevation="2dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/lyt_data_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_data_import_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="File selection"
                    android:textColor="#555555"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txt_data_import_info"
                    android:layout_width="match_parent"
                    android:textColor="#111111"
                    android:layout_height="wrap_content"
                    android:text="To import database..." />

                <RadioGroup
                    android:id="@+id/rg_files"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_data_import_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyt_data_import"
                android:layout_marginBottom="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_import_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMPORT NOW"
                    android:textSize="16dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>