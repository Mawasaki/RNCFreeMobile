<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:layout_margin="6dp"
        android:clickable="true"
        android:elevation="2dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/lyt_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_crash_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Crash Report"
                    android:textColor="#555555"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_crash_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyt_crash"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_crash_info1"
                    android:layout_width="match_parent"
                    android:textColor="#111111"
                    android:layout_height="wrap_content"
                    android:text="Phone:" />

                <TextView
                    android:id="@+id/txt_crash_info2"
                    android:layout_width="match_parent"
                    android:textColor="#111111"
                    android:layout_height="wrap_content"
                    android:text="Version android:" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_delete_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lyt_crash_info"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_crash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND REPORT"
                    android:textSize="16dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1" />

            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

</LinearLayout>